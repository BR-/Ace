// Riot does some pretty weird stuff with textures, so we manually fix them here.
.champion-grid-header .role-icons
    background-image none
    justify-content flex-start

    .role
        background-image url("/fe/lol-champ-select/images/champion-grid/role-filter-disabled.png")
        background-size 180px
        background-repeat no-repeat
        flex 0 0 20px

    .role.active, .role:hover
        background-image url("/fe/lol-champ-select/images/champion-grid/role-filter-enabled.png")
        border-bottom 0px solid #785a28

    .fighter, ._custom[icon=role-fighter]
        background-position 0 0

    .tank, ._custom[icon=role-tank]
        background-position -32px 0

    .mage, ._custom[icon=role-mage]
        background-position -64px 0

    .assassin, ._custom[icon=role-assassin]
        background-position -96px 0

    .support, ._custom[icon=role-support]
        background-position -128px 0

    .marksman, ._custom[icon=role-marksman]
        background-position -160px 0

    ._custom:not([icon^=role-])
        background-image none
        background-color #5B5A56
        -webkit-mask-position center 2px
        -webkit-mask-repeat no-repeat
        -webkit-mask-size 18px

        &.active, &:hover
            background-color #EDE4D0

    native-lane-icon(name, x)
        ._custom[icon={name}]
            -webkit-mask-image url(x)
    native-lane-icon(lane-top, "/fe/lol-parties/bbde3ae67fea2feaae92b10bef0e36e8.png")
    native-lane-icon(lane-jungle, "/fe/lol-parties/1551d3c40d1352ec4db7c6c71022797b.png")
    native-lane-icon(lane-middle, "/fe/lol-parties/c08563cc962cb50a1e3adf4fc32db977.png")
    native-lane-icon(lane-support, "/fe/lol-parties/565076f3029333331c6851a1de19dd81.png")
    native-lane-icon(lane-bottom, "/fe/lol-parties/d756dc85da44da3f6ea7163be04af83a.png")
    native-lane-icon(lane-fill, "/fe/lol-parties/9f8f17cc78932bdf744b34a55bf2a19b.png")
    native-lane-icon(lane-unselected, "/fe/lol-parties/0d9156ab450edad43a5ec72ef5b03ac4.png")

    @import "./common"

    // Generate classes for all the custom icons.
    for icon in ICONS
        ._custom[icon={icon}]
            -webkit-mask-image url("~open-iconic/svg/" icon ".svg")